{
	"name": "partner-portal-demo",
	"version": "0.1.0",
	"description": "A Demo of a B2B Partner portal for booking management",
	"private": true,
	"type": "module",
	"workspaces": [
		"app/backend",
		"app/frontend",
		"packages/shared"
	],
	"scripts": {
		"dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
		"dev:backend": "npm run dev --workspace=app/backend",
		"dev:frontend": "npm run dev --workspace=app/frontend",
		"build": "npm run build --workspaces",
		"build:backend": "npm run build --workspace=app/backend",
		"build:frontend": "npm run build --workspace=app/frontend",
		"test": "npm run test --workspace=app/backend",
		"test:unit": "npm run test --workspace=app/backend",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"typecheck": "tsc --noEmit"
	},
	"devDependencies": {
		"@hey-api/client-fetch": "^0.13.1",
		"@hey-api/openapi-ts": "^0.90.4",
		"@typescript-eslint/eslint-plugin": "^8.20.0",
		"@typescript-eslint/parser": "^8.20.0",
		"concurrently": "^9.1.2",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.1.8",
		"openapi-types": "^12.1.3",
		"prettier": "^3.6.2",
		"typescript": "^5.7.0"
	},
	"engines": {
		"node": ">=22.0.0",
		"npm": ">=10.0.0"
	}
}
