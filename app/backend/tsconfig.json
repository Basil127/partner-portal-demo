{
	"compilerOptions": {
		"target": "ES2024",
		"lib": ["ES2024"],
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"verbatimModuleSyntax": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": ".",
		"incremental": true,
		"types": ["node", "jest"]
	},
	"include": ["src/**/*", "tests/**/*"],
	"exclude": ["node_modules", "dist"]
}
